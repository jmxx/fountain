/* Requires: normalize.css */

/* Global Reset & Standards ---------------------- */
*, *:before, *:after
  box-sizing: border-box
html
  font-size: 62.5%
body
  background: $white
  font-family: $bodyFontFamily
  font-weight: $bodyFontWeight
  font-style: $bodyFontStyle
  font-size: ms(0)
  line-height: 1
  color: $bodyFontColor
  position: relative 
  -webkit-font-smoothing: $fontSmoothing

/* Links ---------------------- */
a
  color: $mainColor
  text-decoration: none
  line-height: inherit
  &:hover
    color: darken($mainColor, 5%)
  &:focus 

    color: darken($mainColor, 5%)
  img
    border:none
p a, p a:visited
  line-height: inherit

/* Misc ---------------------- */
.left        
  float: left
.right       
  float: right
.text-left   
  text-align: left
.text-right  
  text-align: right
.text-center 
  text-align: center
.hide        
  display: none !important
.highlight   
  background: $highlightColor

#googlemap, #map_canvas
  img, object, embed 
    max-width: none

/* Reset for strange margins by default on <figure> elements */
figure 
  margin: 0
